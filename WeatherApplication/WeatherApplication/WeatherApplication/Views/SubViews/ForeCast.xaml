<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApplication.Views.SubViews.ForeCast"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             CompressedLayout.IsHeadless="true">
    <Grid Margin="20,0" CompressedLayout.IsHeadless="true">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Label VerticalOptions="Center" FontSize="Medium" Grid.Column="0" x:Name="LblDate" HorizontalOptions="Start"/>

        <ffimageloading:CachedImage Grid.Column="1" 
                                    HorizontalOptions="Start" 
                                    VerticalOptions="Center"
                                    DownsampleToViewSize="true"
                                    Source="cloudy.png"/>
                                   
        <Label  Grid.Column="2" Text="12°" FontSize="Medium" Opacity="0.65" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Label  Grid.Column="3" Text="15°" FontSize="Medium" VerticalOptions="Center"  HorizontalOptions="Center"/>

    </Grid>
</ContentView>

